<!-- Nuevo Producto -->
<div class="col-md-6 mx-auto"><!-- mx-auto es centrado -->
	<div class="card fondo-claro">
		<div class="card-header">
			<h1>Nuevo Producto</h1>
		</div>
		<div class="card-body">
			<form action="/nuevoProducto" method="POST">
				<div class="form-group">
					<input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus="">
				</div>
				
				<div class="form-row">
					<div class="form-group">
						<b style="float: left;">Tipo de cantidad:</b>
						<label class="custom-control custom-radio ml-3" style="float: left;">
                    		<input value="unidad" id="radioUnidad" name="tipo" type="radio" onclick="radios('unidad')" class="custom-control-input" checked="">
                    		<span class="custom-control-label">Unidad</span>
                  		</label>
                  		<label class="custom-control custom-radio ml-3" style="float: left;">
                    		<input value="Kg" id="radioPeso" name="tipo" type="radio" onclick="radios('peso')" class="custom-control-input">
                    		<span class="custom-control-label">Kg</span>
                  		</label>
                  	</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<input id="unidad" type="number" name="cantidad1" class="form-control" placeholder="Unidades">
					</div>
					<div class="form-group col-md-6">
						<input id="inputOnWriteNumero" type="text" name="cantidad2" class="form-control" placeholder="Peso" disabled="true">
					</div>
				</div>
				<div class="form-group">
					<input id="inputOnWriteNumero" type="text" name="precioCompra" class="form-control" placeholder="Precio de Compra">
				</div>
				<div class="form-group">
					<input id="inputOnWriteNumero" type="text" name="precioVenta" class="form-control" placeholder="Precio a vender">
				</div>
				<div class="form-group">
					<textarea name="descripcion" class="form-control" placeholder="descripcion"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">
						Guardar
					</button>
				</div>
			</form>
		</div>
	</div>
</div>


<script type="text/javascript" src="/js/peticionesAjax.js"></script>