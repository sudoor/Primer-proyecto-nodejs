<div class="row">
	<div class="col-md-4 mx-auto mb-3"><!-- mx-auto es centrado -->
		<div class="card fondo-claro">
			<div class="card-header" style="text-align: center;">
				<h5>Igresos</h5>
			</div>
			<div class="card-body">
				<form class="mx-auto" method="POST" action="/ingresos/agregar/{{userName.id}}">
					<div class="form-group">
						<input id="inputOnWriteNumero" class="form-control" type="text" name="money" placeholder="monto"{{#if money}} value="{{money}}"{{/if}}><br>
						<input class="form-control" type="text" name="descripcion" placeholder="descripcion"{{#if descripcion}} value="{{descripcion}}"{{/if}}><br>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">
							Ingresar
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{{#if IngresoSend}}
	<div class="col-md-8 fondo-claro">
		<div class="table-responsive">	
			<table class="tablaProductos table table-striped table-sm">
				<thead>
					<td><b>Fecha</b></td>
					<td><b>Descripcion</b></td>
					<td><b>Monto Bs</b></td>
					<td><span data-feather="dollar-sign"></span></td>
				</thead>
				<tbody>	
				{{#each IngresoSend}}
					<tr>
						<td>{{date}}</td>
						<td>{{descripcion}}</td>
						<td>{{monto}}</td>
						<td>{{dollar}}</td>
					</tr>
				{{/each}}				
				</tbody>
			</table>
		</div>
	</div>
	{{else}}
	<div class="card mx-auto">
		<div class="card-body">
			<p>Usted no ha ingresado ning√∫n monto.</p>
		</div>
	</div>
{{/if}}

</div>

<script type="text/javascript" src="/js/peticionesAjax.js"></script>
