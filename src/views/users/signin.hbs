<!-- Formulario de inicio de sesion -->
<div class="col-md-4 mx-auto">
	<div class="card mt-4 text-center fondo-claro">
		<div class="card-header">
			<h1>
				Iniciar Sesión
			</h1>
		</div>
		<img class="rounded-circle mx-auto d-block m-4 logo" src="/img/img1.png" alt="imagen de iniciar sesion">
		<div class="card-body">
			<form action="/users/signin" method="POST">
				<div class="form-group">
					<input type="email" name="email" class="form-control" placeholder="correo" autofocus="">
				</div>
				<div class="form-group">
					<input type="password" name="password" class="form-control" placeholder="contraseña">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">Entrar</button>
				</div>
			</form>
		</div>
	</div>
</div>