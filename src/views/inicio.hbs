

<!-- Scripts para las graficas -->
<script type="text/javascript" src="/js/Chart.min.js"></script>


<div class="quitar-borde dondo card">
	<div class="card-header fondo">
		<div class="col-auto d-sm-block">
			<h3>Información Rápida</h3>
		</div>
	</div>
	<div class="fondo card-body">
		<div class="row">
			<div class="col-md-6 text-center">
				<div class="row">
					<div class="col-md-6 text-center">
						<div class="card fondo-claro py-2 py-md-3 border mt-3">
							<div class="card-body">
								<h5 class="card-title mb-4">Valor de 1$ en Bs</h5>
								{{#if inicioInfo.dollar}}
									<h3 class="mt-1 mb-3">{{inicioInfo.dollar}}</h3>
								{{else}}
									<div class="card mx-auto">
										<div class="card-body">
											<p>Usted no ha ingresado el precio del dólar.</p>
											<a class="btn btn-success btn-block" href="/dolar">Ingresar</a>
										</div>
									</div>
								{{/if}}
							</div>
						</div>
					</div>
					<div class="col-md-6 text-center">
						<div class="card fondo-claro py-2 py-md-3 border mt-3">
							<div class="card-body">
								<h5 class="card-title mb-4">Saldo Actual en $</h5>
						
								{{#if inicioInfo.dollarBalance}}
						
								<h3 class="mt-1 mb-3">{{inicioInfo.dollarBalance}}</h3>
						
								{{else}}
						
								<div class="card mx-auto">
									<div class="card-body">
										<p>Usted no ha ingresado el precio del dólar.</p>
										<a class="btn btn-success btn-block" href="/dolar">Ingresar</a>
									</div>
								</div>
						
								{{/if}}
						
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-6 text-center mt-3">
				<div class="card fondo-claro py-2 py-md-3 border">
					<div class="card-body">
						<h5 class="card-title mb-4">Gráfica promedio en Bs del Dólar en la semana</h5>
				
						{{#if inicioInfo.dollarBalance}}
				
						<canvas class="my-4 w-100" id="myChartDollarInicio" width="900" height="380"></canvas>

						{{else}}
				
						<div class="card mx-auto">
							<div class="card-body">
								<p>Usted no ha ingresado el precio del dólar.</p>
								<a class="btn btn-success btn-block" href="/dolar">Ingresar</a>
							</div>
						</div>

						{{/if}}
				
					</div>
				</div>
			</div>
		</div>

		<div class="row mt-3">
			<div class="col-md-12 text-center">
				
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/js/dashboard.js"></script>
<script type="text/javascript">
	{{#if dollarInfo}}
		const datosGrafica = [];
		{{#each dollarInfo}}
			datosGrafica.push({
				fecha: '{{date}}',
				monto: '{{monto}}'
			});
		{{/each}}
		crearGraficaDolar(...datosGrafica);
	{{/if}}
</script>